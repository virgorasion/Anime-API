<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:orientation="vertical"
    tools:context=".AnimeDetail">

    <TextView
        android:id="@+id/TitleAnime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fullmetal Alchemist: Brotherhood"
        android:textStyle="bold"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/jenis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TitleAnime"
        android:text="Anime" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/jenis"
        android:layout_marginBottom="10dp"
        android:background="#afabaa"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp">

            <ProgressBar
                android:id="@+id/Loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/imageAnime"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:src="@mipmap/ic_launcher" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="6">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Statistic"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/animeScore"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Score :"/>

            <TextView
                android:id="@+id/animeRanked"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Ranked :"/>

            <TextView
                android:id="@+id/animePopularity"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Popularity :"/>

            <TextView
                android:id="@+id/animeMembers"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Members :"/>

            <TextView
                android:id="@+id/animeFavorites"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Favorites :"/>

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#afabaa"
        android:visibility="visible" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/LoadingPager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </android.support.v4.view.ViewPager>
</LinearLayout>